@model IEnumerable<SafetyInc.Models.SafetyDiscussionViewModel>

@{
    ViewBag.Title = "Manage";
}

<div class="container">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
        <h1 class="h2">Manage</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group">
                <a class="btn btn-sm btn-outline-secondary" asp-action="Create">Create New</a>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-sm table-hover">
            <thead>
                <tr>
                    <th>
                        Actions
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ObserverFullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ColleagueNames)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LocationString)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Subject)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td style="text-align: center;">
                        <a asp-action="Edit" asp-route-id="@item.SafetyDiscussionID" title="Edit"><span class="fa fa-pencil"></span></a><br />
                        <a asp-action="Details" asp-route-id="@item.SafetyDiscussionID" title="Details"><span class="fa fa-eye"></span></a><br />
                        <a asp-action="Delete" asp-route-id="@item.SafetyDiscussionID" title="Delete"><span class="fa fa-trash"></span></a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ObserverFullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ColleagueNames)
                    </td>
                    <td>
                        @item.Date.ToString("dd/MM/yyyy hh:mm tt")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LocationString)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject)
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>